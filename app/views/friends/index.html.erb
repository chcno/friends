<% if user_signed_in? %>

<h1>Friends List</h1>

<div id="friends">




        <table class="table table-hover table-bordered">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Nombre</th>
              <th scope="col">Email</th>
              <th scope="col">Phone</th>
              <th scope="col">Twitter</th>
              <th scope="col" ></th>





            </tr>
          </thead>
          <tbody>
            <% @friends.each do |friend| %>

                    <% if friend.user == current_user %>
                          <tr>
                                <td><%= link_to friend.first_name + " " + friend.last_name, friend, class:"btn btn-link"  %></td>
                                <td><%= friend.email  %></td>
                                <td><%= friend.phone  %></td>
                                <td><%= friend.twitter  %></td>
                                <td><%= button_to "Delete", friend,   method: :delete, class:"btn btn-outline-danger" %></td>
                          </tr>
                    <% end %>

            <% end %>
          </tbody>
        </table>

        </div>
        <p>

        </p>


<%= link_to "New friend", new_friend_path,  class:"btn btn-secondary" %>
<% else %>
<h1>Hello world</h1>
this is my first page
<% end %>
